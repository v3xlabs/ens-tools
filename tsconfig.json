{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES5",
        "module": "commonjs",
        "lib": ["es2015", "es2016", "es2017", "es2020"],
        "strict": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "lib",
        "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "tests", "lib"]
}